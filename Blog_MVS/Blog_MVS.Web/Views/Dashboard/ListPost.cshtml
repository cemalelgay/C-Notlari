
@{
    ViewBag.Title = "ListPost";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model List<Blog_MVC.Entity.Models.Post>

<div class="col-lg-12">
    <div class="panel panel-default">


        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th width="20%">İşlem</th>
                            <th>Başlık</th>
                            <th>Tarih</th>   
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr>                                   
                                    <td>
                                        <a href="/Dashboard/AddPost/@item.PostID" class="btn btn-warning btn-circle"><i class="fa fa-pencil"></i></a>
                                        <a href="/Dashboard/DeletePost/@item.PostID" class="btn btn-danger btn-circle"><i class="fa fa-minus"></i></a>
                                    </td>
                                    <td>@item.Title</td>
                                    <td>@item.PostDate</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

</script>