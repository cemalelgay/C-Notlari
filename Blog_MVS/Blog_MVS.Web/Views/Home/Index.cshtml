@{
    ViewBag.Title = "Index";
}

<header class="intro-header" style="background-image: url('/images/bow-tie-sunglasses-apple-iphone.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Oyun Blog</h1>
                    <hr class="small">
                    <span class="subheading">Oyunlar Hakkında Blog Yazılar Yazıyorum...</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            @{
                foreach (var item in Model)
                {
                    <div class="post-preview">
                        <a href="/Home/PostDetail">
                            <h2 class="post-title">
                                @item.Title
                            </h2>
                            <h3 class="post-subtitle"></h3>
                        </a>
                        <p class="post-meta">
                            Yazar <a href="#">Cemal Elgay</a>
                            @item.PostDate.ToString("dd-MM-yyyy")
                        </p>
                    </div>
                    <hr>
                }
            }
            <!-- Pager -->
            <ul class="pager">
                <li class="next">
                    <a href="#">Older Posts &rarr;</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<hr>

